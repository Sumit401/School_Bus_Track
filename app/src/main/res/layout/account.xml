<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:fillViewport="true">
<LinearLayout
    android:background="#5fb0c9"
    android:id="@+id/accountlayout"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/driver"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#121D61"/>

        <TableRow
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:background="@drawable/custom_back"
            android:layout_width="150sp"
            android:layout_height="150sp">
            <ImageView
                android:id="@+id/accountpic"
                android:layout_gravity="center"
                android:layout_width="140sp"
                android:layout_height="140sp"
                android:src="@mipmap/person"
                android:contentDescription="Drivers Pic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#121D61"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Update your information,\n Contact Admin"/>
        </LinearLayout>

        <LinearLayout
            android:padding="30sp"
            android:background="@drawable/custom_back"
            android:layout_margin="15sp"
            android:orientation="vertical"
            android:layout_marginTop="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"/>
                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    android:id="@+id/accountname"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"/>
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact No"/>
                <TextView
                    android:id="@+id/accountcontact"
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9876543210"/>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"/>
                <TextView
                    android:id="@+id/accountaddress"
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"/>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latitude"/>
                <TextView
                    android:id="@+id/accountlat"
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17.4404"/>
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longitude"/>
                <TextView
                    android:id="@+id/accountlng"
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="78.4492"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
</ScrollView>